<div class="block">
  <% if (!user) { %>
    <p>Welcome! Please <a href="/login">Login</a>.</p>
    <% } else { %>
      <p>Hello,
        <%= user.displayName %>. <br> <span><a href="/profile">View your profile</a></span> <br> or <br> </p>
      <% } %>

  <div class="discoverBtn">
    <a href="/discover">Discover New Music</a>
  </div>
</div>
